-INCLUDE include.bfs;

PAGE_N_DIR_SLOTS: 2B;

TYPEDEF BLOCK BLOCK-0 {
    PAGE_N_DIR_SLOTS: 2B 3;   // repeat 3 times
    PAGE_HEAP_TOP: 2LB;       // little endian
    PAGE_N_HEAP: 2lB;
    PAGE_FREE: 2LB;
};

BLOCK BLOCK-1 {
    PAGE_N_DIR_SLOTS: 2B 3;   // repeat 3 times
    PAGE_HEAP_TOP: 2LB;       // little endian
    PAGE_N_HEAP: 2lB;
    PAGE_FREE: 2LB;
}

PAGE_N_DIR_SLOTS: 2BB;        // big endian
PAGE_HEAP_TOP: 2B;
PAGE_N_HEAP: 2B;
PAGE_FREE: 2B;

BLOCK BLOCK-2 {
    PAGE_N_DIR_SLOTS: 2B;
    BLOCK BLOCK-1;
    BLOCK BLOCK-3 4;                // repeat 4 times
    PAGE_FREE: 2B;
    BLOCK {                         // implicit block declaration
        PAGE_FREE: 2B;
        PAGE_N_HEAP: 2B;
        BLOCK BLOCK-1;
        BLOCK BLOCK-3 4;
        BLOCK {
            PAGE_FREE: 2B;
        }
    };
}

BLOCK BLOCK-3 {
    PAGE_N_DIR_SLOTS: 2B;
}
